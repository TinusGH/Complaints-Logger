@model IEnumerable<Complaints.Controllers.ComplaintsView>

@{
    ViewBag.Title = "SearchForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Form</h2>


@using (Html.BeginForm("SearchForName", "Complaints")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label for="searchPhrase">Search Name</label>
                <input type="text" name="searchPhrase" id="searchPhrase" class="form-control" />
            </div>
        </div>       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Complaints")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
